{
    "name": "Data Project",
    "dockerComposeFile": [
        "../deployment/local/docker-compose.yml"
    ],
    "service": "data_project",
    "workspaceFolder": "/workspace",
    "customizations":{
        "vscode": {
            "settings": {
                "azurite.skipApiVersionCheck": true
            },
            "extensions": [
                "ms-python.vscode-pylance",
                "GitHub.vscode-github-actions",
                "hashicorp.terraform",
                "azurite.azurite",
                "ms-python.python",
                "ms-azuretools.vscode-azurestorage"
            ]
        }
    },
    "postCreateCommand": "az login --service-principal --username $ARM_CLIENT_ID --password $ARM_CLIENT_SECRET --tenant $ARM_TENANT_ID && az account set --subscription $ARM_SUBSCRIPTION_ID"
}